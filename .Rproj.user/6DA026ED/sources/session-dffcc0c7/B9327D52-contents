# Makefile for Building the Final Report

# Variables
REPORT_DIR = report
RMD_FILE   = $(REPORT_DIR)/final_report.Rmd
OUTPUT     = $(REPORT_DIR)/final_report.html

# Default target: build the report
all: $(OUTPUT)

# Rule: Render the R Markdown file to produce the final report
$(OUTPUT): $(RMD_FILE)
	Rscript -e "rmarkdown::render('$(RMD_FILE)', output_file = 'final_report.html')"

# Clean target: remove the generated report file
clean:
	rm -f $(OUTPUT)